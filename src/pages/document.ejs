<script type="text/javascript">
  function initPlus(plus) {
    // 状态栏颜色
    plus.navigator.setStatusBarBackground('#f99d58');
    // 后退按钮
    let first = null;
    plus.key.addEventListener('backbutton', function () {
      if (history.length > 1) {
        history.back();
        return;
      }
      //首次按键，提示‘再按一次退出应用’  
      if (!first) {
        first = new Date().getTime();
        plus.nativeUI.toast('再按一次退出应用');
        setTimeout(function () {
          first = null;
        }, 1000);
      } else {
        if (new Date().getTime() - first < 1000) {
          plus.runtime.quit();
        }
      }
    }, false);
  }
</script>

